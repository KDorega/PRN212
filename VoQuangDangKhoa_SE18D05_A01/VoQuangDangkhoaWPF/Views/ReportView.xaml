<Window x:Class="VoQuangDangKhoaWPF.Views.ReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reports" Height="500" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Reports" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Tab Control for different reports -->
            <TabControl>
                <TabItem Header="Room Summary">
                    <StackPanel>
                        <TextBlock Text="Total Rooms:" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalRooms" Margin="0,0,0,10"/>
                        <Button Content="Generate Chart" Click="GenerateRoomChart_Click" Margin="0,0,0,10"/>
                        <Canvas x:Name="RoomChartCanvas"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Booking Summary">
                    <StackPanel>
                        <TextBlock Text="Total Bookings:" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalBookings" Margin="0,0,0,10"/>
                        <TextBlock Text="Total Revenue:" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalRevenue" Margin="0,0,0,10"/>
                        <Button Content="Generate Chart" Click="GenerateBookingChart_Click" Margin="0,0,0,10"/>
                        <Canvas x:Name="BookingChartCanvas"/>
                    </StackPanel>
                </TabItem>
            </TabControl>

            <!-- Back Button -->
            <Button Content="Back to Admin" Click="Back_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>