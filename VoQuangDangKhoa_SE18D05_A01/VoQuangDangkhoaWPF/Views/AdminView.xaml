<Window x:Class="VoQuangDangKhoaWPF.Views.AdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="400" Width="600">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Admin Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Manage Rooms" Click="ManageRooms_Click" Margin="0,0,0,10"/>
            <Button Content="Manage Room Types" Click="ManageRoomTypes_Click" Margin="0,0,0,10"/>
            <Button Content="Manage Bookings" Click="ManageBookings_Click" Margin="0,0,0,10"/>
            <Button Content="Manage Customers" Click="ManageCustomers_Click" Margin="0,0,0,10"/>
            <Button Content="Generate Report" Click="GenerateReport_Click" Margin="0,0,0,10"/>
            <Button Content="Logout" Click="Logout_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>