<Window x:Class="VoQuangDangKhoaWPF.Views.CustomerManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Management" Height="500" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Customer Management" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Search -->
            <TextBlock Text="Search by Name:" Margin="0,0,0,5"/>
            <TextBox x:Name="SearchBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Search" Click="Search_Click" Margin="0,0,0,10"/>

            <!-- Customer List -->
            <ListView x:Name="CustomerList" Height="200" Margin="0,0,0,10" MouseDoubleClick="CustomerList_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Customer ID" DisplayMemberBinding="{Binding CustomerID}" />
                        <GridViewColumn Header="Full Name" DisplayMemberBinding="{Binding CustomerFullName}" />
                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding EmailAddress}" />
                        <GridViewColumn Header="Telephone" DisplayMemberBinding="{Binding Telephone}" />
                        <GridViewColumn Header="Birthday" DisplayMemberBinding="{Binding CustomerBirthday, StringFormat={}{0:dd/MM/yyyy}}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Add Customer -->
            <Button Content="Add New Customer" Click="AddCustomer_Click" Margin="0,0,0,10"/>

            <!-- Back Button -->
            <Button Content="Back to Admin" Click="Back_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>