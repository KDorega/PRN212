<Window x:Class="VoQuangDangKhoaWPF.Views.RoomManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Management" Height="500" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Room Management" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            
            <TextBlock Text="Search by Room Number:" Margin="0,0,0,5"/>
            <TextBox x:Name="SearchBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Search" Click="Search_Click" Margin="0,0,0,10"/>


            <ListView x:Name="RoomList" Height="200" Margin="0,0,0,10" MouseDoubleClick="RoomList_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Room ID" DisplayMemberBinding="{Binding RoomID}" />
                        <GridViewColumn Header="Room Number" DisplayMemberBinding="{Binding RoomNumber}" />
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding RoomDescription}" />
                        <GridViewColumn Header="Capacity" DisplayMemberBinding="{Binding RoomMaxCapacity}" />
                        <GridViewColumn Header="Price" DisplayMemberBinding="{Binding RoomPricePerDate, StringFormat={}{0:C}}" />
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding RoomStatus}" />
                    </GridView>
                </ListView.View>
            </ListView>

            
            <Button Content="Add New Room" Click="AddRoom_Click" Margin="0,0,0,10"/>

            
            <Button Content="Back to Admin" Click="Back_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>