<Window x:Class="VoQuangDangKhoaWPF.Views.BookingManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Management" Height="500" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Booking Management" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Booking List -->
            <ListView x:Name="BookingList" Height="200" Margin="0,0,0,10" MouseDoubleClick="BookingList_MouseDoubleClick">>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Booking ID" DisplayMemberBinding="{Binding BookingID}" />
                        <GridViewColumn Header="Customer ID" DisplayMemberBinding="{Binding CustomerID}" />
                        <GridViewColumn Header="Room ID" DisplayMemberBinding="{Binding RoomID}" />
                        <GridViewColumn Header="Start Date" DisplayMemberBinding="{Binding StartDate, StringFormat={}{0:dd/MM/yyyy}}" />
                        <GridViewColumn Header="End Date" DisplayMemberBinding="{Binding EndDate, StringFormat={}{0:dd/MM/yyyy}}" />
                        <GridViewColumn Header="Total Price" DisplayMemberBinding="{Binding TotalPrice, StringFormat={}{0:C}}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Add Booking -->
            <Button Content="Add New Booking" Click="AddBooking_Click" Margin="0,0,0,10"/>

            <!-- Back Button -->
            <Button Content="Back to Admin" Click="Back_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>