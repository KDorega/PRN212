<Window x:Class="VoQuangDangKhoaWPF.Views.EditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Item" Height="400" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="TitleText" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            
            <TextBox x:Name="Field1" Margin="0,0,0,10" Visibility="Collapsed"/>
            <TextBox x:Name="Field2" Margin="0,0,0,10" Visibility="Collapsed"/>
            <TextBox x:Name="Field3" Margin="0,0,0,10" Visibility="Collapsed"/>
            <TextBox x:Name="Field4" Margin="0,0,0,10" Visibility="Collapsed"/>
            <TextBox x:Name="Field5" Margin="0,0,0,10" Visibility="Collapsed"/>

            <Button Content="Save" Click="Save_Click" Margin="0,0,0,10"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>