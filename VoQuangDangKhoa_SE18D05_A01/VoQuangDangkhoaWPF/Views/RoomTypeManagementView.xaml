<Window x:Class="VoQuangDangKhoaWPF.Views.RoomTypeManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Type Management" Height="500" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Room Type Management" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>


            <ListView x:Name="RoomTypeList" Height="200" Margin="0,0,0,10" MouseDoubleClick="RoomTypeList_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Room Type ID" DisplayMemberBinding="{Binding RoomTypeID}" />
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding RoomTypeName}" />
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding TypeDescription}" />
                        <GridViewColumn Header="Note" DisplayMemberBinding="{Binding TypeNote}" />
                    </GridView>
                </ListView.View>
            </ListView>

            
            <Button Content="Add New Room Type" Click="AddRoomType_Click" Margin="0,0,0,10"/>

            
            <Button Content="Back to Admin" Click="Back_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>